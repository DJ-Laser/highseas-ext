{
  "$schema": "https://json.schemastore.org/chrome-manifest.json",
  "manifest_version": 3,

  "name": "djlaser-hsext",
  "author": "DJ_Laser",
  "version": "1.0",

  "description": "A non bugged high seas extension",

  "action": {
    "default_popup": "pages/landing/landing.html"
  },
  "background": {
    "service_worker": "scripts/background.ts"
  },

  "content_scripts": [
    {
      "matches": ["https://highseas.hackclub.com/*"],
      "js": ["scripts/harbor.ts"]
    }
  ],

  "web_accessible_resources": [{
    "resources": ["resources/*"],
    "matches": ["https://highseas.hackclub.com/*"]
  }],

  "externally_connectable": {
    "ids": ["*"],
    "matches": ["https://highseas.hackclub.com/*"]
  }
}
